<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ivan.opencvdetect.MainActivity">

    <org.opencv.android.JavaCameraView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Разрешение:"
            android:layout_width="wrap_content"
            android:textColor="#00FFFF"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="19dp"
            android:id="@+id/textView" />

        <TextView
            android:text="Normal"
            android:textColor="#00FFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_above="@+id/toggleButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Normal"
            android:layout_width="wrap_content"
            android:textColor="#00FFFF"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_above="@+id/toggleButton"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ToggleButton
            android:text="ToggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#00FFFF"
            android:id="@+id/toggleButton3"
            android:layout_below="@+id/textView4"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ToggleButton
            android:text="Faces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#00FFFF"
            android:id="@+id/toggleButton"
            android:layout_marginBottom="35dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner3"
            android:entries="@array/items1"
            android:layout_alignParentBottom="true"
            android:textSize="20sp"
            android:textColor="#00FFFF"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Switch
            android:text="CASCADES-OFF"
            android:layout_width="wrap_content"
            android:textColor="#00FFFF"
            android:layout_height="wrap_content"
            android:id="@+id/switch1"
            android:layout_alignBottom="@+id/toggleButton3"
            android:layout_centerHorizontal="true" />

        <ToggleButton
            android:text="ToggleButton"
            android:layout_width="200px"
            android:textColor="#00FFFF"
            android:id="@+id/toggleButton2"
            android:layout_height="200px"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_above="@+id/spinner2" />

        <TextView
            android:text="Color Detection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#00FFFF"
            android:id="@+id/textView6"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/toggleButton2"
            android:layout_toStartOf="@+id/toggleButton2"
            android:layout_marginRight="26dp"
            android:layout_marginEnd="26dp" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner2"
            android:textColor="#00FFFF"
            android:entries="@array/items"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Corners"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#00FFFF"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView7" />

        <TextView
            android:text="CamShift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#00FFFF"
            android:id="@+id/textView5"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/toggleButton"
            android:layout_toEndOf="@+id/toggleButton" />

        <ToggleButton
            android:text="ToggleButton"
            android:layout_width="wrap_content"
            android:id="@+id/toggleButton5"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:layout_alignBaseline="@+id/toggleButton2"
            android:layout_alignBottom="@+id/toggleButton2"
            android:layout_toRightOf="@+id/textView5"
            android:layout_toEndOf="@+id/textView5" />

        <ToggleButton
            android:text="ToggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toggleButton4"
            android:layout_marginRight="11dp"
            android:layout_marginEnd="11dp"
            android:layout_alignBaseline="@+id/toggleButton5"
            android:layout_alignBottom="@+id/toggleButton5"
            android:layout_toLeftOf="@+id/textView6"
            android:layout_toStartOf="@+id/textView6" />

    </RelativeLayout>

    -
</RelativeLayout>
